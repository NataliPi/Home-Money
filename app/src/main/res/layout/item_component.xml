<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/standard_margin"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
            <EditText
                android:id="@+id/spendedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/spending_name"
                android:textSize="@dimen/text_small"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/price"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableTint="@null"
                android:background="@null"
                android:padding="0dp"/>

          <EditText
              android:id="@+id/price"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="@string/price"
              android:textSize="@dimen/text_small"
              android:layout_toLeftOf="@+id/currency"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:drawableTint="@null"
              android:inputType="numberDecimal"
              android:background="@null"
              android:padding="0dp"
              >
          </EditText>
          <com.natali_pi.home_money.utils.views.DropdownView
              android:id="@+id/currency"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="USD"
              android:textSize="@dimen/text_small"
              android:background="@null"
              android:layout_alignParentRight="true"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"/>
      </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkViolet"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"/>
    </LinearLayout>
</LinearLayout>

